<script>
    $(document).foundation();
    $(document).ready(function () {
        // build pagination
        $("#loading").hide();
        $("#tableContent").show();

        //ajax aborted
        // $.get({
        //     url: '/table/data',
        //     success:function(data) {
        //       $("#tableContent").html(data);
        //       $("#loading").hide();
        //     }
        // })


        $(".pagination li").click(function () {


            $("#loading").show();
            $("#tableContent").hide();


        })

        $(".disabled").off("click");
        $(".current").off("click");

        $('[data-open-details]').click(function (e) {
            e.preventDefault();
            $(this).next().toggleClass('is-active');
            $(this).toggleClass('is-active');
        });

    });


</script>

